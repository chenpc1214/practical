@model Work.Models.Item

@{
    ViewData["Title"] = "Details";
}

<h1>詳細資料</h1>

<div>
    
    <hr />
    <dl class="row" style="margin-left:25%">
        <dt class = "col-sm-2">
            姓名
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            手機
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mobile)
        </dd>
        <dt class = "col-sm-2">
            購買物品
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.sth)
        </dd>
    </dl>
</div>
<div>
    <input type="button" value="修改" class="btn btn-warning" onclick="ajaxFunc.EditItemUrl(@Model.Id)" />
    <input type="button" value="返回" class="btn btn-primary" onclick="ajaxFunc.IndexItemUrl()" />
</div>

<script>

    var ajaxFunc = {

        IndexItemUrl: function () {
            $.ajax({
                type: "GET",
                url: "@Url.Action("Index", "Items")",
                contentType: "html",
                dataType: "html",
                success: (function (res) {
                    $("#divMain").html(res)
                })
            })
        },

        EditItemUrl: function (ItemId) {
                $.ajax({
                    type: "GET",
                    url: "@Url.Action("Edit", "Items")",
                    contentType: "html",
                    dataType: "html",
                    data: {
                        id: ItemId
                    },
                    success: (function (res) {
                        $("#divMain").html(res)
                    })
                })
        },


    }

</script>